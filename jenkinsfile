pipeline {
    agent { label 'ansible' }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/vinayak432/ansible_tomcat.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh '''
                  ansible-playbook \
                  -i inventory \
                  run_tom.yml
                '''
            }
        }
    }
}
